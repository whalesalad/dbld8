!!! 5
%html
  %head
    %meta{ charset: "utf-8" }
    %meta{ name: "viewport", content: "user-scalable=no, initial-scale=1.0, maximum-scale=1.0, width=device-width" }
    %meta{ name: "apple-mobile-web-app-capable", content: "yes" }
    %meta{ name: 'apple-itunes-app', content: smart_app_bar_content }
    
    %title= full_title(yield(:title))

    %link{ :rel => 'icon', :type => 'image/x-icon', :href => asset_path('favicon.png') }
    
    = stylesheet_link_tag "application", :media => "all"
    = csrf_meta_tags
    = yield(:head)
  
  %body{ :id => "#{params[:controller]}-section", :class => "#{body_class(yield(:extra_body_classes))}" }

    - if params[:controller] == 'static'
      %h1.logo= link_to 'DoubleDate', root_path

    #wrapper
      = yield

    = render 'layouts/footer'

    = javascript_include_tag "base"