.page-header
  %h1
    All Locations
    %small #{pluralize(@locations.count, 'Location')} Total

%table.table.table-striped
  %thead
    %tr
      %th ID
      %th Name
      %th Country
      %th Users
  
  %tbody
    - for location in @locations
      %tr
        %td #{location.id}
        %td 
          %b
            #{link_to location, admin_location_path(location)}
        %td #{location.country.name}
        %td #{location.users_count}