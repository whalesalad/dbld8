- content_for :title, @title || 'Locations'

.page-header
  .btn-group.pull-right
    = link_to 'All', admin_locations_path, :class => 'btn'
    = link_to 'Cities', cities_admin_locations_path, :class => 'active btn'
    = link_to 'Venues', venues_admin_locations_path, :class => 'btn'

  %h1
    = yield :title
    %small #{pluralize(@locations.count, 'City')} Total

= render 'location_list'